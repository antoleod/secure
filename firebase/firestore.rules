rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }

    function isSuperAdminEmail() {
       return request.auth.token.email == 'jdioses@outlook.be' || request.auth.token.email == 'antoleod@gmail.com';
    }
    
    // Users collection
    match /users/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      allow create: if isAuthenticated() && request.auth.uid == uid;
      allow update: if isAdmin() 
                    || (isOwner(uid) && !('role' in request.resource.data))
                    || (isOwner(uid) && isSuperAdminEmail() && request.resource.data.role == 'admin');
      allow list: if isAdmin();
    }
    
    // KYC collection
    match /kyc/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      allow write: if isOwner(uid) || isAdmin(); 
    }
    
    // Collaterals collection
    match /collaterals/{docId} {
      allow create: if isAuthenticated() && request.resource.data.ownerUid == request.auth.uid;
      // Allow reading if Admin OR Owner OR (item is for sale)
      allow read: if isAdmin() 
                  || (isAuthenticated() && resource.data.ownerUid == request.auth.uid)
                  || resource.data.isForSale == true;
      allow update: if isAdmin(); 
      allow list: if isAdmin() 
                  || (isAuthenticated() && resource.data.ownerUid == request.auth.uid)
                  || (isAuthenticated() && resource.data.isForSale == true); // Allow listing for sale items
    }
    
    // Loan Requests collection
    match /loan_requests/{docId} {
      allow create: if isAuthenticated() && request.resource.data.customerUid == request.auth.uid;
      allow read: if isAuthenticated() && (resource.data.customerUid == request.auth.uid || isAdmin());
      allow update: if isAdmin(); 
      allow list: if isAdmin();
    }
    
    // Loans collection
    match /loans/{docId} {
      allow create: if isAdmin();
      allow read: if isAuthenticated() && (resource.data.customerUid == request.auth.uid || isAdmin());
      // Allow Admin to update anything
      // Allow User to only update 'surrenderRequested' field if they own the loan
      allow update: if isAdmin() 
                    || (isAuthenticated() 
                        && resource.data.customerUid == request.auth.uid 
                        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['surrenderRequested', 'updatedAt']));
      allow list: if isAdmin() || (isAuthenticated() && resource.data.customerUid == request.auth.uid);
    }
    
    // Payments collection
    match /payments/{docId} {
      allow create: if isAuthenticated() && request.resource.data.customerUid == request.auth.uid;
      allow read: if isAuthenticated() && (resource.data.customerUid == request.auth.uid || isAdmin());
      allow update: if isAdmin();
      allow list: if isAdmin() || (isAuthenticated() && resource.data.customerUid == request.auth.uid);
    }
    
    // Settings collection
    match /settings/global {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Audit Logs collection
    match /audit_logs/{docId} {
      allow create: if isAdmin() || isAuthenticated(); 
      allow read: if isAdmin();
      allow write: if false; 
    }
    
    // Loyalty subcollection
    match /users/{uid}/loyalty/status {
      allow read: if isOwner(uid);
      allow write: if isAdmin();
    }
  }
}
