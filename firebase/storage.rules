rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isAllowedType() {
      return request.resource != null
        && (request.resource.contentType.matches('image/.*')
        || request.resource.contentType == 'application/pdf');
    }

    function isAllowedSize() {
      return request.resource.size < 8 * 1024 * 1024;
    }

    function isValidWrite() {
      return request.resource == null || (isAllowedType() && isAllowedSize());
    }

    // Garment uploads: users/{uid}/garments/{garmentId}/{filename}
    match /users/{uid}/garments/{garmentId}/{filename} {
      allow read: if isOwner(uid);
      allow write: if isOwner(uid) && isValidWrite();
    }

    // KYC uploads: users/{uid}/kyc/...
    match /users/{uid}/kyc/{allPaths=**} {
      allow read: if isOwner(uid);
      allow write: if isOwner(uid) && isValidWrite();
    }

    // Payment proofs: users/{uid}/payments/...
    match /users/{uid}/payments/{allPaths=**} {
      allow read: if isOwner(uid);
      allow write: if isOwner(uid) && isValidWrite();
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
